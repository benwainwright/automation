{
  "name": "ts-automation",
  "version": "1.0.0",
  "main": "dist/src/api.js",
  "types": "dist/src/api.d.ts",
  "license": "MIT",
  "dependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.9",
    "chokidar": "^3.5.3",
    "dotenv": "^16.0.3",
    "hass-ts": "^1.1.0",
    "homeassistant-ws": "^0.2.2",
    "isomorphic-ws": "^5.0.0",
    "jest": "^29.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "tslog": "^4.8.2",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "start": "NODE_OPTIONS=--enable-source-maps ts-node ./src/start.ts",
    "build": "docker build --build-arg BUILD_FROM='homeassistant/i386-base:latest' -t local/ts-automation .",
    "start-docker": "docker run --env-file ./.env --rm -v $PWD/plugins:/config/ts-automation-plugins local/ts-automation"
  },
  "devDependencies": {
    "prettier": "^2.8.7"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ]
        }
      ]
    ]
  }
}
